<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Background color for the button -->
        <solid android:color="#FF0000"/> <!-- Màu đỏ cho nút xóa -->

        <!-- Bo góc cho nút -->
        <corners android:radius="16dp"/>

        <!-- Padding bên trong nút -->
        <padding
            android:left="8dp"
            android:right="8dp"
            android:top="4dp"
            android:bottom="4dp" />

        <!-- Tùy chọn đường viền nếu cần -->
        <stroke
            android:width="1dp"
            android:color="#FFFFFF"/> <!-- Đường viền màu trắng -->
    </shape>

</selector>