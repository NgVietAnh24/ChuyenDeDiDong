<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.DanhSachChonMon">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Back button"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Danh sách món ăn"
            android:textColor="@color/textColorTitle"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Search Container -->
    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_edt"
            android:hint="Tìm kiếm..."
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/textColorTitle"
            android:textColorHint="#BD6060"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RecyclerView Containers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listCategory"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listFood"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:paddingBottom="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMonDaChon"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_btn"
            android:text="Món đã chọn"
            android:textColor="@color/textColor"
            android:layout_marginRight="10dp"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDatTruoc"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_btn"
            android:text="Đặt trước"
            android:textColor="@color/textColor"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>