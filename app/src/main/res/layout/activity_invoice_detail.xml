<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <!-- Nút quay lại -->
    <ImageButton
        android:layout_marginRight="170dp"
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Quay lại" />

    <!-- Tiêu đề hóa đơn -->
    <TextView
        android:id="@+id/invoiceTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết hóa đơn 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- Bảng chi tiết món ăn -->
    <ListView
        android:id="@+id/itemsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Tổng tiền, tiền thu, tiền dư -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 14$"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:gravity="end"
        android:layout_marginTop="16dp"
        android:paddingEnd="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiền thu: 20$"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:gravity="end"
        android:paddingEnd="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiền dư: 6$"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:gravity="end"
        android:paddingEnd="8dp" />

    <!-- Thời gian tạo hóa đơn với hình nền -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_menu"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:alpha="0.2" />

        <TextView
            android:id="@+id/invoiceTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp" />

        <TextView
            android:id="@+id/invoiceDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24/09/2024"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/invoiceTimeTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />
    </RelativeLayout>
</LinearLayout>