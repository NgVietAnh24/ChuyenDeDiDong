<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_nav"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily=""
            android:text="Quản lí"
            android:textColor="#5D2E2E"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
<!--Thành phần-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv_ql_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lí tài khoản"
            style="@style/MyTextViewStyle_Nav"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_pink"
            />
        <TextView
            android:id="@+id/tv_ql_monan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lí món ăn"
            style="@style/MyTextViewStyle_Nav"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_pink"
            />
        <TextView
            android:id="@+id/tv_ql_ban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lí bàn"
            style="@style/MyTextViewStyle_Nav"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_pink"
            />
        <TextView
            android:id="@+id/tv_ql_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lí hóa đơn"
            style="@style/MyTextViewStyle_Nav"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_pink"
            />
        <TextView
            android:id="@+id/tv_thongke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống kê"
            style="@style/MyTextViewStyle_Nav"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_pink"
            />
        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:gravity="end"
            style="@style/MyTextViewStyle_Nav"
            />
    </LinearLayout>
</LinearLayout>