<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F0F2">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Danh sách món B:1"
        android:textColor="#6C362E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Product Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FDE8E8"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Product Image -->

            <!-- Product Info and Actions -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banhmi" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Product Name and Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nước dưa"
                        android:textColor="#6C362E"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Đang chuẩn bị"
                        android:textColor="#A6A6A6"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Product Price -->
                <!-- Product Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp">

                    <!-- Product Price Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:textColor="#E63946"
                        android:textSize="16sp"
                        android:paddingEnd="8dp"
                        />

                    <!-- Delete Button -->
                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#C71818"
                        android:text="Xóa"
                        android:textColor="#FFFFFF"
                        android:minWidth="64dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginEnd="8dp" />

                    <!-- Choose Button -->
                    <Button
                        android:id="@+id/btnChoose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#C71818"
                        android:text="Chọn làm"
                        android:textColor="#FFFFFF"
                        android:minWidth="64dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp" />

                </LinearLayout>

                <!-- Quantity Control and Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Quantity Control -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnDecrease"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:backgroundTint="#C71818"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:padding="0dp" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="1"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnIncrease"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:backgroundTint="#C71818"
                            android:text="+"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:padding="0dp" />
                        <Button
                            android:id="@+id/btnTake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#C71818"
                            android:minWidth="64dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="Đã lấy"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="50dp"  />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Section with Notes and Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnMakeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Làm tất cả"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C71818"
            android:layout_marginTop="8dp"
            android:layout_gravity="end" />
        <!-- Note Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú:"
            android:textColor="#6C362E"
            android:textSize="16sp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/vien_edittext"
            android:padding="8dp"
            android:hint="Nhập ghi chú của bạn tại đây"
            android:textColor="#6C362E"
            android:textColorHint="#A6A6A6" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#C71818"
                android:text="Hủy đơn"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp" />

            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#C71818"
                android:text="Thanh toán"
                android:textColor="#FFFFFF"
                android:paddingStart="32dp"
                android:paddingEnd="32dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
