<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Product Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FDE8E8"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/ivFoodImage"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banhmi" />

            <!-- Product Info and Actions -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Product Name and Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFoodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nước dưa"
                        android:textColor="#6C362E"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Đang chuẩn bị"
                        android:textColor="#A6A6A6"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Product Price -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="1dp">

                    <TextView
                        android:id="@+id/tvFoodPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:textColor="#E63946"
                        android:textSize="16sp"
                        android:paddingEnd="8dp" />

                    <!-- Delete Button -->
<!--                    <Button-->
<!--                        android:id="@+id/btnDelete"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        android:backgroundTint="#C71818"-->
<!--                        android:text="Xóa"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:minWidth="64dp"-->
<!--                        android:paddingLeft="8dp"-->
<!--                        android:paddingRight="8dp"-->
<!--                        android:layout_marginEnd="8dp" />-->

                    <!-- Choose Button -->
                    <Button
                        android:id="@+id/btnChoose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#C71818"
                        android:text="Chọn làm"
                        android:textColor="#FFFFFF"
                        android:minWidth="64dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp" />
                </LinearLayout>

                <!-- Quantity Control and Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDecrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#C71818"
                        android:text="-"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:padding="0dp" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="1"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnIncrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#C71818"
                        android:text="+"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:padding="0dp" />

                    <Button
                        android:id="@+id/btnTake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#C71818"
                        android:minWidth="64dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="Đã lấy"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="50dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
