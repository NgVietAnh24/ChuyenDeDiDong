<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#FFF1F1"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tableNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tên bàn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#D43B3B" />

    <TextView
        android:id="@+id/tableDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/tableStatusImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/circle_grey"
        android:contentDescription="Trạng thái bàn" />
</LinearLayout>
